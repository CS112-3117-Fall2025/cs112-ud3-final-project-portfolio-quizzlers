        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Match the name to the definition.">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </Label>
   <HBox prefHeight="20.0" prefWidth="200.0">
      <children>
         <VBox prefHeight="200.0" prefWidth="160.0">
            <children>
            
                <Label fx:id="quizCardsNameLabel" text="Names" />
            </children>
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label text="Definition" />
            </children>
         </VBox>
      </children>
   </HBox>
   <HBox prefHeight="200.0" prefWidth="200.0">
      <children>
         <VBox prefHeight="200.0" prefWidth="160.0">
            <children>
               <ListView fx:id="quizCardsNameListView" maxHeight="-Infinity" prefHeight="200.0" prefWidth="160.0" />
            </children>
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="180.0">
            <children>
               <Label fx:id="quizCardsInfoLabel" wrapText="true" />
            </children>
         </VBox>
      </children>
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="quizCardsConfirmAnswerButton" mnemonicParsing="false" onAction="#onConfirmAnswerButtonClick" text="Confirm Answer" />
